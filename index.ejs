<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
    <script src="/javascripts/app.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-app="tujpu" ng-controller="main">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <ui-view></ui-view>
          
          <form style="margin-top:30px;" ng-submit="sub()">
          <div class="form-group">
              <input type="text" class="form-control" placeholder="user" ng-model="formData.desc">
          </div>
          <div class="form-group">
              <input type="password" class="form-control" ng-model="formData.title" placeholder="password">
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </div>
      </div>
    </div>

  <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Welcome to <%= title %></h1>
        </div>
  </script>

  <script type="text/ng-template" id="/posts.html">
        <div class="page-header">
            <h1>Welcome to <%= title %> Users</h1>
            <p>id: <%= user_id %>, user: <%= user_name%></p>
        </div>
  </script>
  </body>
</html>
